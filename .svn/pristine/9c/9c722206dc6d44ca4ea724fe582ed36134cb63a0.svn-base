export default {
  async loadMasterFaq ({ commit }, payload) {
    try {
      const res = await this.$axios.$get('faq', payload)
      commit('SET_FAQ', res.data)
      return {
        status: true,
        message: 'Berhasil mendapatkan data',
        data: res.data
      }
    } catch (e) {
      if (e.message.toLowerCase().includes('network')) {
        return {
          status: false,
          message: 'Koneksi bermasalah, silakan cek koneksi internet.'
        }
      } else {
        const { errors, message } = e.response.data
        return {
          status: false,
          errors,
          message
        }
      }
    }
  },
  async loadMasterFaqKlasifikasi ({ commit }, payload) {
