export default {
  async loadKontak ({ commit }, payload) {
    try {
      const res = await this.$axios.$get('admin/master/kontak', payload)
      return {
        status: true,
        message: 'Berhasil mendapatkan data',
        data: res.data
      }
    } catch (e) {
      if (e.message.toLowerCase().includes('network')) {
        return {
          status: false,
          message: 'Koneksi bermasalah, silakan cek koneksi internet.'
        }
      } else {
        const { errors, message } = e.response.data
        return {
          status: false,
          errors,
          message
        }
      }
    }
  },
  async simpanKontak ({ commit }, payload) {
    try {
      const res = await this.$axios.$post('admin/master/kontak/simpan', payload)
      return {
        status: true,
        message: 'Berhasil menyimpan data',
        data: res.data
      }
    } catch (e) {
      if (e.message.toLowerCase().includes('network')) {
        return {
          status: false,
          message: 'Koneksi bermasalah, silakan cek koneksi internet.'
        }
      } else {
        const { errors, message } = e.response.data
        return {
          status: false,
          errors,
          message
        }
      }
    }
  }
}
